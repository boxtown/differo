extends layout

block content
  .row
    .col-8
      ul.list-group
        for space in spaces
          li.list-group-item
            .d-flex.justify-content-between
              h5.mb-1= space.name
              small=`created ${moment(space.createdAt).fromNow()}`
            div= space.description
    .col
      if user
        a.btn.btn-primary(href='/create-space') Create Space